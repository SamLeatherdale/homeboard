{
  "name": "homeboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "git:submodule": "git submodule update --init --recursive",
    "install:all": "npm run install:horizon && npm run install:trainboard",
    "install:horizon": "cd lovelace-horizon-card && npx yarn install",
    "install:trainboard": "cd trainboard && npm install",
    "lint": "eslint --ext ts,tsx --report-unused-disable-directives",
    "lint:all": "npm run lint -- src",
    "lint:fix": "npm run lint -- --fix",
    "preview": "vite preview",
    "prepare": "husky",
    "prettier:fix": "prettier --write",
    "types:check": "tsc --noEmit --project tsconfig.json",
    "types:gen": "tsx generate-types.ts"
  },
  "dependencies": {
    "@hakit/core": "^5.1.5",
    "@linaria/core": "^6.1.0",
    "@linaria/react": "^6.1.0",
    "@lit/react": "^1.0.8",
    "@wyw-in-js/vite": "^0.5.0",
    "custom-card-helpers": "^1.9.0",
    "gtfs-realtime-bindings": "^1.1.1",
    "home-assistant-js-websocket": "^9.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-screen-burn": "^1.0.11"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.9.3",
    "vite": "^6.0.3"
  }
}
